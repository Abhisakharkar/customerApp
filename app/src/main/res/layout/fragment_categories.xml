<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Categories"
    android:paddingTop="@dimen/x56"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/x70"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/x8"
            android:background="@color/blue_normal"
            android:id="@+id/mainCategoryAddCat"
            android:paddingBottom="@dimen/x22">

            <ImageView
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/x48"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginTop="@dimen/x4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="Add Category"
                android:layout_gravity="left|center_vertical"
                android:textSize="@dimen/xs12"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylcerViewMainCat"
            android:layout_width="@dimen/x70"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/addCatLvlTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8"
            android:layout_marginBottom="@dimen/x8"
            android:layout_marginRight="@dimen/x16"
            android:layout_marginLeft="@dimen/x12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Category"
                    android:textColor="@color/black"
                    android:layout_gravity="left|center_vertical"
                    android:textSize="@dimen/xs16"
                    android:layout_marginLeft="@dimen/x32"
                    android:layout_marginTop="@dimen/x12"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"/>

                <ImageView
                    android:id="@+id/secCategoryImage"
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x32"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_marginRight="@dimen/x32"
                    android:layout_marginTop="@dimen/x8"
                    android:layout_marginBottom="@dimen/x8"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ExpandableListView
            android:id="@+id/recylcerViewSecCat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>