<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/x8"
    app:cardElevation="@dimen/x8"
    android:layout_marginLeft="@dimen/x16"
    android:layout_marginRight="@dimen/x16"
    android:layout_marginTop="@dimen/x8"
    android:layout_marginBottom="@dimen/x8"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/x8"
        app:cardElevation="@dimen/x8"
        android:background="@drawable/product_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@color/blue_pressed"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x12"
                android:paddingTop="@dimen/x8">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CakeCake CakeCake CakeCake CakeCake"
                    android:textSize="@dimen/xs16"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/x8"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x32"/>

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 300"
                    android:textSize="@dimen/xs12"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/red"
                    android:paddingRight="@dimen/x16"
                    android:layout_gravity="center"/>
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>