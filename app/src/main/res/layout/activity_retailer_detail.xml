<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coordinatorLayoutAtRetDtl">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarAtRetDtl"
            android:layout_height="220dp"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:toolbarId="@+id/toolbarAtRetDtl"
                app:expandedTitleTextAppearance="@android:color/transparent"
                app:layout_scrollFlags="scroll"
                app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
                app:contentScrim="?attr/colorPrimary">

                <ImageView
                    android:id="@+id/retailerImgAtRetDtl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbarAtRetDtl"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:contentPadding="@dimen/x4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/retailerNameAtRetDet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Test Store"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="@dimen/xs22"
                            android:layout_marginRight="@dimen/x16"
                            android:layout_marginLeft="@dimen/x16"
                            android:layout_marginTop="@dimen/x8"
                            android:layout_marginBottom="@dimen/x2"/>

                        <TextView
                            android:id="@+id/subLocalityAtRetDet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BIT Campus"
                            android:layout_marginLeft="@dimen/x16"
                            android:textSize="@dimen/x16"
                            android:textColor="@color/textHintBold"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x1"
                            android:background="@color/lightGrey"
                            android:layout_marginBottom="@dimen/x4"
                            android:layout_marginTop="@dimen/x4"
                            android:layout_marginLeft="@dimen/x8"
                            android:layout_marginRight="@dimen/x8"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Overview"
                            android:textColor="@color/blue_normal"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginBottom="@dimen/x4"/>

                        <View
                            android:layout_width="@dimen/x128"
                            android:layout_height="@dimen/x4"
                            android:background="@color/blue_pressed"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x16"
                    android:paddingRight="@dimen/x32"
                    android:layout_marginTop="@dimen/x16"
                    android:paddingBottom="@dimen/x8">

                    <ImageView
                        android:layout_width="@dimen/x32"
                        android:layout_height="@dimen/x32"
                        android:src="@drawable/ic_location_on_black_24dp"
                        android:layout_marginRight="@dimen/x32"/>

                    <TextView
                        android:id="@+id/addressAtRetDtl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bh2 Bit patna campus,patna,india bihar Bh2 Bit patna campus,patna,india bihar"
                        android:textSize="@dimen/x12"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/lightGrey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x16"
                    android:paddingRight="@dimen/x32"
                    android:layout_marginTop="@dimen/x16"
                    android:paddingBottom="@dimen/x8">

                    <ImageView
                        android:layout_width="@dimen/x32"
                        android:layout_height="@dimen/x32"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_marginRight="@dimen/x32"/>

                    <TextView
                        android:id="@+id/callAtRetDtl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7050316935"
                        android:textSize="@dimen/x12"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/lightGrey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x16"
                    android:paddingRight="@dimen/x32"
                    android:layout_marginTop="@dimen/x16"
                    android:paddingBottom="@dimen/x8">

                    <ImageView
                        android:layout_width="@dimen/x32"
                        android:layout_height="@dimen/x32"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:layout_marginRight="@dimen/x32"/>

                    <TextView
                        android:id="@+id/timingAtRetDtl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Close: 10:12:00\nOpen: 07:03:50"
                        android:textSize="@dimen/x12"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/lightGrey"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Products"
                    android:textColor="@color/blue_normal"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/x4"
                    android:layout_marginTop="@dimen/x32"/>

                <View
                    android:layout_width="@dimen/x128"
                    android:layout_height="@dimen/x4"
                    android:background="@color/blue_pressed"
                    android:layout_gravity="center"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/productRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x22" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <ProgressBar
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBarAtRetDet"
        android:visibility="gone"/>
</RelativeLayout>